              input.input100(type='password', name='password', value='')
              span.focus-input100(data-placeholder='Password')
            .wrap-input100.validate-input.m-b-50(data-validate='Enter password')
              input.input100(type='password', name='password_confirmation', value='')
              span.focus-input100(data-placeholder=' Confirm Password')
