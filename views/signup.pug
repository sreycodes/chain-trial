    .limiter
      .container-login100
        .wrap-login100.p-t-70.p-b-20
          form.login100-form.validate-form(action='/signup', method='POST')
            span.login100-form-title.p-b-70
              | Welcome
            span.login100-form-avatar
              img(src='images/logo.jpg', alt='LOGO')
            .wrap-input100.validate-input.m-t-50.m-b-35(data-validate='Enter username')
              input.input100(type='text', name='username', value='')
              span.focus-input100(data-placeholder='Username')
